
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "list",book:@book,user:@user %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= image_tag @user.get_profile_image(100,100) %><br>
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book_find.id) do %>
                              <%= @book_find.title %>
                            <% end %>
                        </td>
                        <td>
                            <%= @book_find.body %>
                        </td>
                        <td>
                          <% if @book_find.user == current_user %>
                            <%= link_to "Edit",edit_book_path(@book_find.id),class:"btn btn-sm btn-success" %>
                          <% end %>
                        </td>
                        <td>
                          <% if @book_find.user == current_user %>
                             <%= link_to "Destroy",book_path(@book_find.id),method: :delete, "data-confirm" => "本当に削除しますか？" ,class:"btn btn-sm btn-danger" %>
                          <% end %>
                        </td>
                    </tr>    
                </tbody>
            </table>
        </div>
    </div>
</div>


