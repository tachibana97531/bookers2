<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "books/list",book:@book,user:@user %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <% @books.each do |book| %>
            <table class="table">
                <tr>
                    <td>
                        <%= image_tag @user.get_profile_image(100,100) %>
                    </td>
                    <td>
                        <%= link_to book_path(book.id) do %>
                          <%= book.title %>
                        <% end %>
                    </td>
                    <td>
                        <%= book.body %>
                    </td>
                </tr>
            </table>
            <% end %>
        </div>
    </div>
</div>


